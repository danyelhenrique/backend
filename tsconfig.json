{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "allowJs": true,
    "outDir": "./build",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "src/@types/**/*"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
